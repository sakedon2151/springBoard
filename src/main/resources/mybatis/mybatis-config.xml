<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- configuration 속 자식 속성을은 모두 순서가 정해져 있음. 따라서 settings 는 typeAliases 이전에 선언되어야 함 -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <!-- 소문자 DTO 라는 이름은 이제 다시 명시할 필요 없이 type 속성의 주소에 있는 클래스의 객체를 의미함 -->
        <typeAlias type="com.nc13.springBoard.model.UserDTO" alias="userDTO"/>
        <typeAlias type="com.nc13.springBoard.model.BoardDTO" alias="boardDTO"/>
        <typeAlias type="com.nc13.springBoard.model.ReplyDTO" alias="replyDTO"/>
    </typeAliases>
</configuration>